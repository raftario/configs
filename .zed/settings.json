{
	"languages": {
		"JavaScript": {
			"formatter": {
				"external": {
					"command": "pnpm",
					"arguments": [
						"--silent",
						"prettier",
						"--stdin-filepath",
						"{buffer_path}"
					]
				}
			},
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		},
